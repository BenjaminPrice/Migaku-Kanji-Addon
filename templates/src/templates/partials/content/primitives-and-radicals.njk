{% from "partials/structure/title-tooltip-macro.njk" import mcr_titleTooltip with context %}

<!-- START - Primitives and radicals -->
<div class="primitives-and-radicals__wrapper">
	<div class="primitives-and-radicals__container">
		<div class="primitives-and-radicals__components">
			<div class="primitives-and-radicals__block">
				{{ mcr_titleTooltip(
						id='primtives__title',
						title=txt__primitives_title,
						tooltip=txt__primitives_tooltip,
						h2class='primitives-and-radicals__title'
				) }}
				<div id="primitives" class="primitives-and-radicals__list kanji-char-font"></div>
			</div>
			<div class="primitives-and-radicals__block">
				{{ mcr_titleTooltip(
							id='primitives_of__title',
							title=txt__primitives_of_title,
							tooltip=txt__primitives_of_tooltip,
							h2class='primitives-and-radicals__title'
					) }}
				<div id="primitive_of_alts" class="primitives-and-radicals__alternatives">
					<img src="{% if is_demo %}/{% endif %}_kanji_icon_alert_decagram_black.svg" alt=""/>
					{{ txt__primitives_of_alternatives }}
					<span class="primitive-alternatives"></span>
				</div>
				<div id="primitive_of" class="primitives-and-radicals__list kanji-char-font -tooltip-pos__above-left"></div>
			</div>
		</div>
		<div class="mobile-only-info-msg">
			{{ txt__primitives_mobile_info | safe }}
		</div>
		<div class="primitives-and-radicals__block results-container">
			{{ mcr_titleTooltip(
					id='radicals__title',
					title=txt__radicals_title,
					tooltip=txt__radicals_tooltip,
					h2class='primitives-and-radicals__title'
			) }}
			<div id="radicals" class="primitives-and-radicals__list kanji-char-font"></div>
			<div class="faded-info-msg">
				{{ txt__radicals_tip }}
			</div>
		</div>
	</div>
</div>
<!-- END - Primitives and radicals -->
