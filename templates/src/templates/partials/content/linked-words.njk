{% from "partials/structure/title-tooltip-macro.njk" import titleTooltip with context %}

<!-- START - Linked words -->
<div class="linked-words__container">
	{{ titleTooltip(
			id='linked_words__title',
			title=txt__vocab_title,
			tooltip=txt__vocab_tooltip
	) }}
	<div class="linked-words__examples">
		<div id="words" class="linked-words__list kanji-char-font">{{ linked_words | safe }}</div>
	</div>
	<div class="faded-info-msg">
		{{ txt__vocab_tip }}
	</div>
	<div class="mobile-info-msg">
		{{ txt__vocab_mobile_info }}
	</div>
</div>
<!-- END - Linked words -->
