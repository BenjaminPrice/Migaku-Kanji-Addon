{% macro titleTooltip(id, title, tooltip, h2class='') %}
	<div class="title-tooltip__container">
		<h2 class="{{h2class}}{% if h2class != '' %} {% endif %}title-tooltip__title">
			{{title}}
			<button
				type="button"
				title="What's this?"
				aria-controls="tooltip-id--{{id}}"
				onclick="toggleShow()"
			>
				<img src="{% if is_demo %}/{% endif %}_kanji_icon_help_black.svg" alt=""/>
			</button>
		</h2>

		<div
			id="tooltip-id--{{id}}"
			class="title-tooltip__text"
			style="display: none"
			aria-expanded="false"
		>
			{{tooltip}}
		</div>

		<script>
			var tooltipContainer = document.getElementById('tooltip-id--{{id}}');
			tooltipContainer.style.display = 'none';
			tooltipContainer.setAttribute('aria-expanded', 'false');

			function toggleShow() {
			    if (tooltipContainer.style.display === 'none'){
						tooltipContainer.style.display = 'block';
						tooltipContainer.setAttribute('aria-expanded', 'true');
			    } else {
						tooltipContainer.style.display = 'none';
						tooltipContainer.setAttribute('aria-expanded', 'false');
			    }
			}
		</script>

		<hr class="separator"/>
	</div>
{% endmacro %}
